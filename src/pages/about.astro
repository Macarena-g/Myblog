---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';

const pageTitle = "About Me";

const identity = {
  firstName: "Sarah",
  country: "Canada",
  occupation: "Technical Writer",
  hobbies: ["photography", "birdwatching", "baseball"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];

const happy = true;
const finished = true;
const goal = 3;

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<BaseLayout pageTitle="About Me">
  <div class="about-header">
    <div class="header-content">
      <h1 class="title">About Me</h1>
      <p class="subtitle">Industrial Engineer & Tech Enthusiast</p>
    </div>
  </div>

  <main class="container">
    <section class="about-section">
      <div class="about-grid">
        <div class="about-content">
          <h2>My Journey</h2>
          <p>
            I'm a passionate Full Stack Developer with a keen interest in creating beautiful and functional web applications. 
            My journey in tech has been driven by a constant desire to learn and grow, always staying up-to-date with the latest 
            technologies and best practices.
          </p>
          
          <h2>What I Do</h2>
          <p>
            I specialize in building modern web applications using cutting-edge technologies. My expertise includes:
          </p>
          <ul class="skills-list">
            <li>Frontend Development (React, Vue, Astro)</li>
            <li>Backend Development (Node.js, Python)</li>
            <li>Database Design & Management</li>
            <li>UI/UX Design Principles</li>
            <li>Responsive Web Design</li>
          </ul>
        </div>
        
        <div class="about-image">
          <div class="image-container">
            <!-- Replace with your image -->
            <div class="placeholder-image">
              <span>Your Photo</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="experience-section">
      <h2>Professional Experience</h2>
      <div class="timeline">
        <div class="timeline-item">
          <div class="timeline-content">
            <h3>Senior Developer</h3>
            <p class="company">Tech Company</p>
            <p class="date">2022 - Present</p>
            <p>Leading development of enterprise applications and mentoring junior developers.</p>
          </div>
        </div>
        
        <div class="timeline-item">
          <div class="timeline-content">
            <h3>Full Stack Developer</h3>
            <p class="company">Digital Agency</p>
            <p class="date">2020 - 2022</p>
            <p>Developed and maintained multiple client projects using modern web technologies.</p>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .about-header {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: white;
    padding: 6rem 0;
    margin-bottom: 4rem;
    text-align: center;
  }

  .header-content {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 1rem;
  }

  .title {
    font-size: 3.5rem;
    margin: 0;
    font-weight: 700;
    letter-spacing: -0.5px;
  }

  .subtitle {
    font-size: 1.5rem;
    margin: 1rem 0 0;
    opacity: 0.9;
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 1rem;
  }

  .about-section {
    margin-bottom: 4rem;
  }

  .about-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .about-content h2 {
    color: var(--text-color);
    margin: 2rem 0 1rem;
    font-size: 1.8rem;
  }

  .about-content p {
    color: var(--text-color);
    opacity: 0.9;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .skills-list {
    list-style: none;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .skills-list li {
    background: var(--background-color);
    padding: 1rem;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
    color: var(--text-color);
    font-weight: 500;
  }

  .image-container {
    position: relative;
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .placeholder-image {
    background: var(--background-color);
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-color);
    font-weight: 500;
  }

  .experience-section {
    margin-top: 4rem;
  }

  .timeline {
    position: relative;
    padding: 2rem 0;
  }

  .timeline-item {
    position: relative;
    padding-left: 2rem;
    margin-bottom: 2rem;
  }

  .timeline-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, var(--primary-color), var(--secondary-color));
  }

  .timeline-content {
    background: var(--background-color);
    padding: 1.5rem;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
  }

  .timeline-content h3 {
    margin: 0 0 0.5rem;
    color: var(--text-color);
  }

  .company {
    color: var(--primary-color);
    font-weight: 500;
    margin: 0;
  }

  .date {
    color: var(--text-color);
    opacity: 0.7;
    font-size: 0.9rem;
    margin: 0.5rem 0;
  }

  @media (max-width: 768px) {
    .about-header {
      padding: 4rem 0;
    }

    .title {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1.2rem;
    }

    .about-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .skills-list {
      grid-template-columns: 1fr;
    }
  }
</style>