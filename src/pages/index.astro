---
import BaseLayout from '../layouts/BaseLayout.astro';
import Greeting from '../components/Greeting';
import InteractiveCard from '../components/InteractiveCard.astro';
import SkillsSection from '../components/SkillsSection.astro';
const pageTitle = "Macarena Guzman";
---

<BaseLayout pageTitle={pageTitle}>
  <main class="container">
    <section class="hero">
      <h1 class="title">{pageTitle}</h1>
      <p class="subtitle">Welcome to my portfolio</p>
      <Greeting client:load messages={["Hi", "Hola", "Oi"]} />
    </section>
    
    <div class="cards-grid">
      <InteractiveCard
        title="About Me"
        description="Learn more about my journey, experience, and what drives me as a Data Analyst."
        icon="ðŸ‘‹"
        link="/about"
      />
      
      <InteractiveCard
        title="My Blog"
        description="Read about my experiences, notes, and projects on Data Science."
        icon="ðŸ“"
        link="/blog"
      />
      
      <InteractiveCard
        title="Projects"
        description="Explore the projects I've worked on and my contributions to the tech community."
        icon="ðŸš€"
        link="/projects"
      />
    </div>

    <SkillsSection />
  </main>
</BaseLayout>

<style>
  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .hero {
    text-align: center;
    padding: 4rem 0;
    margin-bottom: 2rem;
  }

  .title {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .subtitle {
    font-size: 1.5rem;
    color: var(--text-color);
    opacity: 0.8;
    margin-bottom: 2rem;
  }

  .cards-grid {
    display: grid;
    gap: 2rem;
    margin: 2rem 0;
  }

  @media (min-width: 768px) {
    .cards-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 767px) {
    .cards-grid {
      grid-template-columns: 1fr;
    }
  }
</style>